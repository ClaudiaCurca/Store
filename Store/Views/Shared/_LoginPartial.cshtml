@if(Context.User.Identity.Name != null)
{
    <form  class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="nav-link text-dark">Hello @Context.User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Log off</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Registration">Register</a></li>
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
    
}